# https://editorconfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# 4 space indentation
[*.lua]
indent_style = space
indent_size = 2

# 4 space indentation
[*.nu]
indent_style = space
indent_size = 4
